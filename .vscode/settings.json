{
  "// beyondBINARY quantum-prefixed | uvspeed | {+1, 1, -1, +0, 0, -0, +n, n, -n}": true,

  "editor.rulers": [80, 120],
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.renderWhitespace": "boundary",

  "files.exclude": {
    "**/.DS_Store": true,
    "**/__pycache__": true,
    "**/node_modules": true,
    "**/.venv": true,
    "**/dist": true,
    "**/build": true
  },

  "files.associations": {
    "*.mdc": "markdown"
  },

  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python3",
  "python.analysis.typeCheckingMode": "basic",

  "[python]": {
    "editor.tabSize": 4,
    "editor.formatOnSave": true
  },

  "[javascript]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },

  "[html]": {
    "editor.tabSize": 4,
    "editor.formatOnSave": false
  },

  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.venv": true,
    "**/uv.lock": true
  },

  "terminal.integrated.env.osx": {
    "QUANTUM_BRIDGE_URL": "http://localhost:8085"
  }
}
