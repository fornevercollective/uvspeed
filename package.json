{
  "name": "uvspeed-quantum",
  "version": "3.0.0",
  "description": "beyondBINARY quantum-prefixed code architecture â€” notepad, game engine, keyboard analyzer, video broadcast, and desktop terminal",
  "homepage": "https://fornevercollective.github.io/uvspeed/web/quantum-notepad.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/fornevercollective/uvspeed.git"
  },
  "bugs": {
    "url": "https://github.com/fornevercollective/uvspeed/issues"
  },
  "main": "src/02-electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "build-win": "electron-builder --win",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "quantum",
    "uvspeed",
    "ai",
    "terminal",
    "development",
    "electron",
    "brothernumsy",
    "kbatch",
    "hexcast",
    "freyaunits"
  ],
  "author": "UV-Speed Quantum Development Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^40.4.0",
    "electron-builder": "^25.1.0"
  },
  "dependencies": {
    "express": "^5.2.1",
    "node-pty": "^1.0.0",
    "ws": "^8.18.0",
    "xterm": "^5.5.0",
    "xterm-addon-fit": "^0.10.0"
  },
  "build": {
    "appId": "com.uvspeed.quantum-terminal",
    "productName": "UVspeed Quantum Terminal",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/02-electron/**/*",
      "src/01-core/**/*",
      "web/**/*",
      "icons/**/*"
    ],
    "mac": {
      "icon": "icons/icon-192.png",
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "icons/icon-192.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "icons/favicon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
